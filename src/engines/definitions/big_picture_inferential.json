{
  "engine_key": "big_picture_inferential",
  "engine_name": "Big Picture Inferential Analysis",
  "description": "Pre-conceptual document-level analysis that maps core theses, commitment packages, incompatibilities, internal tensions, and practical stakes before diving into specific concepts.",
  "version": 1,
  "category": "concepts",
  "kind": "synthesis",
  "reasoning_domain": "document_level_analysis",
  "researcher_question": "What are the core commitments and tensions in this document before we analyze specific concepts?",
  "canonical_schema": {
    "core_theses": [
      {
        "thesis_id": "string (format: 'TH{N}')",
        "thesis_statement": "string - the core claim",
        "thesis_type": "descriptive | normative | methodological | ontological",
        "supporting_arguments": [
          "string"
        ],
        "textual_evidence": "string",
        "source": "string"
      }
    ],
    "commitment_packages": [
      {
        "package_id": "string (format: 'CP{N}')",
        "package_name": "string - evocative name for this bundle",
        "commitments": [
          "string - individual commitments in this package"
        ],
        "internal_logic": "string - how commitments relate to each other",
        "what_accepting_entails": "string - downstream implications"
      }
    ],
    "incompatibilities": [
      {
        "incompatibility_id": "string (format: 'INC{N}')",
        "commitment_a": "string",
        "commitment_b": "string",
        "nature_of_conflict": "string - why these can't both be true",
        "which_dominates": "string - which the author prioritizes",
        "severity": "high | medium | low"
      }
    ],
    "internal_tensions": [
      {
        "tension_id": "string (format: 'TEN{N}')",
        "tension_description": "string - what's in tension",
        "pole_a": "string - one side",
        "pole_b": "string - other side",
        "how_author_manages": "string - resolution strategy if any",
        "unresolved_remainder": "string - what remains unresolved"
      }
    ],
    "practical_stakes": [
      {
        "stake_id": "string (format: 'PS{N}')",
        "stake_description": "string - what's at stake practically",
        "who_affected": [
          "string"
        ],
        "implications_if_true": "string",
        "implications_if_false": "string"
      }
    ],
    "meta": {
      "total_theses": "number",
      "total_commitment_packages": "number",
      "total_incompatibilities": "number",
      "total_tensions": "number",
      "dominant_thesis_type": "string",
      "key_findings": [
        "string - top 3 insights"
      ]
    }
  },
  "extraction_focus": [
    "core_theses",
    "commitment_bundles",
    "logical_incompatibilities",
    "internal_tensions",
    "practical_implications"
  ],
  "primary_output_modes": [
    "structured_text_report",
